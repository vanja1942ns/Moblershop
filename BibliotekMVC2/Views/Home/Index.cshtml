
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="background2">
    <p>Hejsan @Model.UserData.Name</p>
   
    <div class="header">
        <nav>
            <ul>
                <li><a href="~/Login/Index">Start</a></li>
                <li><a href="~/Home/Index">Webshop</a></li>
                <li><a href="~/Home/Möblerinfo">Möbler</a></li>
                <li><a href="~/Home/Korgen">Korgen</a></li>
            </ul>
        </nav>
    </div>

    <h3>Webshop</h3>
    
    <style>
        body {
            background-color: beige;
        }

        ul {
            list-style-type: none;
            margin: 0px;
            padding: 0px;
            text-align: center;
            font-family: 'Noto Serif JP', sans-serif;
        }

            ul li {
                display: inline;
                padding: 10px;
            }

            ul a {
                display: inline block;
                padding: 10px;
            }

        li a {
            display: inline-block;
            color: rgb(0, 0, 0);
            text-decoration: none;
            text-align: center;
        }

        li {
            display: inline-block;
            padding: 1%;
        }

            li a:hover {
                background-color: beige
            }

        header1 {
            text-align: center;
            font-size: 50px;
            font-family: 'Lobster', cursive;
            height: 10vh
        }

        p {
            font-size: 30px;
        }

        h3 {
            text-align: center;
            font-size: 50px;
        }

        h4 {
            text-align: center;
            font-size: 20px;
        }



        .background2 {
            background: url("../../Content/Photo10.jpg");
            background-repeat: no-repeat;
            background-size: cover;
        }

        a {
            background-color: green;
            color: black;
            padding: 5px;
            text-decoration: none;
            text-transform: uppercase;
        }

        .Tabort a {
            background-color: red;
        }

        .button {
            float: right;
        }
        
        .footer {
            
            left: 0;
            bottom: 0;
            width: 100%;
            color: black;
            font-family: 'Noto Serif JP', sans-serif;
            text-align: center;
        }
    </style>
    <table>
    
        <tr>
            <th>Titel</th>
            <th>Type</th>
            <th>Möbler kvar</th>
            <th>Pris</th>
            <th>Lägg till</th>


        </tr>
    
        @foreach (var book in Model.BookList)
        {
            <tr>

                <td><a href="~/Home/Möblerinfo/@book.Id">@book.Title</a></td>
                <td>@book.Type</td>
                <td>@book.Count</td>
                <td>@book.Pris</td>
                
                <td>
                    @if (book.Count > 0)
                    {
                        <a href="~/Home/Lend/@book.Id">Köpa</a>
                    }

                </td>
            </tr>
        }
    </table><br><h4>Köpte varor</h4>
    <div class="Card">
        <a href="~/Home/Korgen" class="button">Till Korgen</a>
        
        <ul>
            

            @if (Model.UserData.ShopedList != null)
            {
                foreach (var borrowed in Model.UserData.ShopedList)
                {
                    foreach (var book in Model.BookList)
                    {
                        if (borrowed.Id == book.Id)
                        {
                            <li>@book.Title:@book.Pris kr</li>
                        }
                    }

                }
            }

        </ul>
    </div><br><br>
    <div class="footer">
        <div class="innerbox">&copy; 2018 Copyright</div>
    </div>

</body>

